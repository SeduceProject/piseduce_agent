[Unit]
Description=PiSeduce Workec Executor
 
[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/piseduce_worker
ExecStart=/usr/bin/python3 worker_exec.py config_worker.json
ExecStop=/usr/bin/touch execstop
ExecStopPost=/bin/rm execstop
TimeoutStopSec=20
Restart=on-failure
 
[Install]
WantedBy=multi-user.target
